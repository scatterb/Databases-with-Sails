<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/books/books">Kirjat</a></li>
    <li class="breadcrumb-item active"><%- book.title %></li>
</ol>

<%- book.synopsis %>
<br>
<br>

    <% var images = book.images %>
    <% if (book.category != "Comic") { %>
        <h4>Kansikuvat</h4>
        <% var imageArray = images.split(",") %>
        <% imageArray.forEach(function(image){ %>
            <img src="<%= image %>">
        <% }) %>
    <% } %>

<% if (req.session.me) { %>

    <h1 class="display-4">Muokkaa kirjaa</h1>
    <form method="post" action="/books/update/<%= book.id %>">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" value="<%= book.title %>">
        </div>
        <div class="form-group">
            <label for="synopsis">Synopsis</label>
            <textarea name="synopsis" rows="20" class="form-control"><%= book.synopsis %></textarea>
        </div>
        <div class="form-group">
            <label for="year">Year</label>
            <textarea name="year" class="form-control"><%= book.year %></textarea>
        </div>
        <div class="form-group">
                <label for="category">Category</label>
                <input type="radio" name="category" value="Book" checked> Book<br>
                <input type="radio" name="category" value="Comic"> Comic<br>
            </div>
        <input type="submit" value="Submit" class="btn btn-primary">
    </form>

<% } %>