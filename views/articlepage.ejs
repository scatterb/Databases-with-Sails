<%- article.title %>
<br>
<%- article.body %>
<br>



<% if (req.session.me) { %>

    <h1 class="display-4">Muokkaa artikkelia</h1>
    <form method="post" action="/articles/update/<%= article.id %>">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" value="<%= article.title %>">
        </div>
        <div class="form-group">
            <label for="body">Body</label>
            <textarea name="body" rows="20" class="form-control"><%= article.body %></textarea>
        </div>
        <div class="form-group">
            <label for="category">Category</label>
            <textarea name="category" class="form-control"><%= article.category %></textarea>
        </div>
        <input type="submit" value="Submit" class="btn btn-primary">
    </form>

<% } %>